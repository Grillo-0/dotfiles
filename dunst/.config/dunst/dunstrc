# See dunst(5) for all configuration options
[global]
    ### Display ###

    monitor = 0
    follow = keyboard

    ### Geometry ###

    width = 300
    height = 75
    origin = top-right
    offset = 10x10

    ### Progress bar ###

    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    indicate_hidden = yes

    padding = 8
    horizontal_padding = 8
    text_icon_padding = 0

    frame_width = 1
    frame_color = "#83a598"

    gap_size = 4

    sort = yes

    idle_threshold = 120

    ### Text ###

    font = Iosevka 10

    markup = full
    format = "<b>%s</b>\n%b"

    alignment = left
    vertical_alignment = center

    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64

    ### History ###
    sticky_history = yes

    history_length = 20

    ### Misc/Advanced ###

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open

    always_run_script = true

    title = Dunst
    class = Dunst

    ### mouse

    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#98971a"
    timeout = 10

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#d79921"
    timeout = 10

[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#cc241d"
    timeout = 0
