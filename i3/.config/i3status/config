# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = '#98971a'
	color_degraded = '#d79921'
	color_bad = '#cc241d'

	output_format = "i3bar"

	interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"
order += "battery 0"
order += "volume master"

wireless _first_ {
        format_up = "W: (%bitrate at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: (%speed) %ip" format_down = ""
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_unk = "?"
    status_full = "â˜» "
    low_threshold = 10
	threshold_type = time
    last_full_capacity= true
    format_percentage = "%.00f%s"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
